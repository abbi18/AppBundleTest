<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:layout_width="208dp"
            android:layout_height="150dp" app:srcCompat="@drawable/firstandroid" android:id="@+id/imageView"
            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_editor_absoluteX="15dp"/>
    <ImageView
            android:layout_width="211dp"
            android:layout_height="171dp" app:srcCompat="@drawable/secondandroid" android:id="@+id/imageView2"
            tools:layout_editor_absoluteY="178dp" tools:layout_editor_absoluteX="-57dp"
            app:layout_editor_absoluteX="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>